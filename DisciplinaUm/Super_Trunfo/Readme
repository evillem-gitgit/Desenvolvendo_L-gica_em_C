#include <stdio.h>

int main() {
    int populacao1, populacao2;

    printf("Digite a populacao da carta 1: ");
    scanf("%d", &populacao1);

    printf("Digite a populacao da carta 2: ");
    scanf("%d", &populacao2);

    if (populacao1 > populacao2) {
        printf("Carta 1 venceu!\n");
    } else {
        printf("Carta 2 venceu!\n");
    }

    return 0;
}

